{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true        
    },
    "extends": [
        "prettier",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4],
        "max-len": ["error", { "code": 140 }],
        "semi": [2, "always"],
        "eol-last": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "linebreak-style": 0,
        "camelcase": 0,
        "no-console": "warn",
        "no-useless-constructor": 0
    }
}
